<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_rectangle_radius_15_stroke">

    <ImageView
        android:id="@+id/imageView_whale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        android:src="@drawable/yes_5_img_whale"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_title"
        style="@style/noto_sans_semi_bold_18sp_greyish_brown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="참 잘했고래!"
        app:layout_constraintEnd_toEndOf="@+id/imageView_whale"
        app:layout_constraintStart_toStartOf="@+id/imageView_whale"
        app:layout_constraintTop_toBottomOf="@+id/imageView_whale" />

    <TextView
        android:id="@+id/textView_subTitle"
        style="@style/noto_sans_medium_16sp_greyish_brown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내일도 칭찬해요!"
        app:layout_constraintEnd_toEndOf="@+id/textView_title"
        app:layout_constraintStart_toStartOf="@+id/textView_title"
        app:layout_constraintTop_toBottomOf="@+id/textView_title" />

    <Button
        android:id="@+id/button_confirm"
        style="@style/noto_sans_regular_15sp_black"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/background_rectangle_radius_30"
        android:backgroundTint="@color/sand_yellow"
        android:text="확인"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_subTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>