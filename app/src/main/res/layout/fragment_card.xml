<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_card_main"
    android:background="@color/pale"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CardFragment">

    <TextView
        android:id="@+id/tv_card_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:height="18dp"
        android:fontFamily="@font/noto_sans_medium"
        android:includeFontPadding="false"
        android:text="선규님의"
        android:textSize="16sp"
        android:textColor="@color/greyish_brown"
        android:letterSpacing="-0.05"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:height="25.5dp"
        android:gravity="bottom"
        android:fontFamily="@font/noto_sans_semibold"
        android:includeFontPadding="false"
        android:text="칭찬 카드"
        android:textSize="22sp"
        android:textColor="@color/greyish_brown"
        android:letterSpacing="-0.05"
        app:layout_constraintTop_toBottomOf="@id/tv_card_title_name"
        app:layout_constraintStart_toStartOf="@id/tv_card_title_name"
        app:layout_constraintEnd_toEndOf="@id/tv_card_title_name"/>
    
    <View
        android:id="@+id/v_card_title_div"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="41dp"
        android:background="@drawable/bg_card_div"
        app:layout_constraintTop_toBottomOf="@id/tv_card_title_name"
        app:layout_constraintStart_toStartOf="@id/tv_card_title"
        app:layout_constraintEnd_toEndOf="@id/tv_card_title"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/card_box_bg"
        app:layout_constraintTop_toBottomOf="@id/v_card_title_div"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_card_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="42dp"
            android:fontFamily="@font/noto_sans_semibold"
            android:includeFontPadding="false"
            android:text="38번"
            android:textSize="20sp"
            android:textColor="@color/brown"
            android:letterSpacing="-0.05"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_medium"
            android:includeFontPadding="false"
            android:text="의 칭찬"
            android:textSize="20sp"
            android:textColor="@color/brown"
            android:letterSpacing="-0.05"
            app:layout_constraintTop_toTopOf="@id/tv_card_count"
            app:layout_constraintStart_toEndOf="@id/tv_card_count"/>

        <Button
            android:id="@+id/btn_card_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginRight="42dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:background="@drawable/bg_btn_card_month"
            android:elevation="2dp"
            android:fontFamily="@font/noto_sans_regular"
            android:includeFontPadding="false"
            android:text="전체"
            android:textSize="13dp"
            android:textColor="@color/brown"
            android:letterSpacing="-0.05"
            android:drawableRight="@drawable/card_ic_month"
            android:drawablePadding="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_card_box"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingLeft="42dp"
            android:paddingRight="22dp"
            android:paddingTop="27dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/btn_card_month"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_card_box_card" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>