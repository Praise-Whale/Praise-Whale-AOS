<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_card_main"
    android:background="@color/pale"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".card.CardFragment">

    <TextView
        android:id="@+id/tv_card_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:fontFamily="@font/noto_sans_medium"
        android:includeFontPadding="false"
        android:text="닉네임님의"
        android:textSize="16sp"
        android:textColor="@color/greyish_brown"
        android:letterSpacing="-0.05"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/noto_sans_semibold"
        android:gravity="bottom"
        android:includeFontPadding="false"
        android:letterSpacing="-0.05"
        android:text="칭찬 카드"
        android:textColor="@color/greyish_brown"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@id/tv_card_title_name"
        app:layout_constraintStart_toStartOf="@id/tv_card_title_name"
        app:layout_constraintTop_toBottomOf="@id/tv_card_title_name" />

    <View
        android:id="@+id/v_card_title_div"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_card_div"
        app:layout_constraintEnd_toEndOf="@id/tv_card_title"
        app:layout_constraintStart_toStartOf="@id/tv_card_title"
        app:layout_constraintTop_toBottomOf="@id/tv_card_title" />

    <Switch
        android:id="@+id/card_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:thumb="@drawable/switch_tab_thumb_left"
        android:track="@drawable/switch_tab_track"
        android:textOn="칭찬랭킹"
        android:textOff="카드서랍"
        android:showText="true"
        android:checked="false"
        android:textAppearance="@style/switch_style"
        app:layout_constraintTop_toBottomOf="@id/v_card_title_div"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <TextView
        android:id="@+id/tv_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:fontFamily="@font/noto_sans_regular"
        android:text="카드서랍"
        android:textSize="15sp"
        android:textColor="@color/brown_grey"
        android:letterSpacing="-0.05"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="@id/card_switch"
        app:layout_constraintBottom_toBottomOf="@id/card_switch"
        app:layout_constraintLeft_toLeftOf="@id/card_switch"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/tv_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="31dp"
        android:layout_marginLeft="31dp"
        android:fontFamily="@font/noto_sans_regular"
        android:text="칭찬랭킹"
        android:textSize="15sp"
        android:textColor="@color/brown_grey"
        android:letterSpacing="-0.05"
        app:layout_constraintTop_toTopOf="@id/card_switch"
        app:layout_constraintBottom_toBottomOf="@id/card_switch"
        app:layout_constraintRight_toRightOf="@id/card_switch"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/card_box_bg"
        app:layout_constraintTop_toBottomOf="@id/card_switch"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/card_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="42dp"
            android:fontFamily="@font/noto_sans_semibold"
            android:includeFontPadding="false"
            android:text="n번"
            android:textSize="20sp"
            android:textColor="@color/brown"
            android:letterSpacing="-0.05"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/card_count2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_medium"
            android:includeFontPadding="false"
            android:text="의 칭찬"
            android:textSize="20sp"
            android:textColor="@color/brown"
            android:letterSpacing="-0.05"
            app:layout_constraintTop_toTopOf="@id/card_count"
            app:layout_constraintStart_toEndOf="@id/card_count"
            android:visibility="invisible"
            tools:visibility="visible"/>

        <Button
            android:id="@+id/btn_card_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginRight="42dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:background="@drawable/bg_btn_card_month"
            android:elevation="2dp"
            android:fontFamily="@font/noto_sans_regular"
            android:includeFontPadding="false"
            android:text="0000년 선택"
            android:textSize="13dp"
            android:textColor="@color/brown"
            android:letterSpacing="-0.05"
            android:drawableRight="@drawable/card_ic_month"
            android:drawablePadding="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_card_box"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingLeft="42dp"
            android:paddingRight="22dp"
            android:paddingTop="27dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/btn_card_picker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_card_box_card"
            android:visibility="invisible"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/empty_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="119dp"
            app:layout_constraintWidth_percent="0.35"
            app:layout_constraintDimensionRatio="125:107"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/empty_img_whale"
            android:visibility="invisible"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/tv_empty1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/noto_sans_semibold"
            android:textSize="18sp"
            android:textColor="@color/greyish_brown"
            android:alpha="0.7"
            android:letterSpacing="-0.05"
            android:includeFontPadding="false"
            android:text="아직 칭찬을 하지 않았어요!"
            app:layout_constraintLeft_toLeftOf="@id/empty_img"
            app:layout_constraintRight_toRightOf="@id/empty_img"
            app:layout_constraintTop_toBottomOf="@id/empty_img"
            android:visibility="invisible"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/tv_empty2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/noto_sans_medium"
            android:textSize="16sp"
            android:textColor="@color/greyish_brown"
            android:alpha="0.7"
            android:letterSpacing="-0.05"
            android:includeFontPadding="false"
            android:lineSpacingExtra="-2sp"
            android:text="칭찬 미션을 완료하고,\n칭찬 카드를 모아봐요!"
            app:layout_constraintLeft_toLeftOf="@id/tv_empty1"
            app:layout_constraintRight_toRightOf="@id/tv_empty1"
            app:layout_constraintTop_toBottomOf="@id/tv_empty1"
            android:visibility="invisible"
            tools:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>