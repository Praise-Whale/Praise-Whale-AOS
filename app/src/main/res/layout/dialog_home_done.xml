<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/imageButton_close"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@android:color/transparent"
        android:padding="16dp"
        android:src="@drawable/popup_btn_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_dialogTitle_01"
        style="@style/noto_sans_medium_18dp_greyish_brown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="34dp"
        android:text="누구에게"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_dialogTitle_02"
        style="@style/noto_sans_semi_bold_18dp_greyish_brown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text="칭찬"
        app:layout_constraintStart_toEndOf="@+id/textView_dialogTitle_01"
        app:layout_constraintTop_toTopOf="@+id/textView_dialogTitle_01" />

    <TextView
        android:id="@+id/textView_dialogTitle_03"
        style="@style/noto_sans_medium_18dp_greyish_brown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="했나요?"
        app:layout_constraintStart_toEndOf="@+id/textView_dialogTitle_02"
        app:layout_constraintTop_toTopOf="@+id/textView_dialogTitle_02" />

    <View
        android:id="@+id/view_underline"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/sand_yellow"
        app:layout_constraintEnd_toEndOf="@+id/textView_dialogTitle_03"
        app:layout_constraintStart_toStartOf="@+id/textView_dialogTitle_01"
        app:layout_constraintTop_toBottomOf="@+id/textView_dialogTitle_01" />

    <EditText
        android:id="@+id/editText_praiseTo"
        style="@style/noto_sans_regular_13dp_black"
        android:layout_width="220dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/selector_edittext"
        android:hint="이름을 실명으로 입력해주세요."
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:textColorHint="@color/very_light_pink_two"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView_dialogTitle_01"
        app:layout_constraintTop_toBottomOf="@+id/view_underline" />

    <ImageButton
        android:id="@+id/imageButton_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:background="@android:color/transparent"
        android:src="@drawable/btn_delete"
        app:layout_constraintBottom_toBottomOf="@+id/editText_praiseTo"
        app:layout_constraintEnd_toEndOf="@+id/editText_praiseTo"
        app:layout_constraintTop_toTopOf="@+id/editText_praiseTo" />

    <TextView
        android:id="@+id/textView_recentPraiseTo"
        style="@style/noto_sans_regular_14dp_brown_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="최근 칭찬한 사람"
        app:layout_constraintStart_toStartOf="@+id/editText_praiseTo"
        app:layout_constraintTop_toBottomOf="@+id/editText_praiseTo" />

    <Button
        android:id="@+id/button_recentPraiseTo_01"
        style="@style/noto_sans_regular_13dp_brown"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/background_rectangle_radius_30"
        android:backgroundTint="@color/pale"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingHorizontal="8dp"
        android:text="김송현"
        app:layout_constraintEnd_toStartOf="@id/button_recentPraiseTo_02"
        app:layout_constraintStart_toStartOf="@+id/textView_recentPraiseTo"
        app:layout_constraintTop_toBottomOf="@+id/textView_recentPraiseTo" />

    <Button
        android:id="@+id/button_recentPraiseTo_02"
        style="@style/noto_sans_regular_13dp_brown"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/background_rectangle_radius_30"
        android:backgroundTint="@color/pale"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingHorizontal="8dp"
        android:text="최호준"
        app:layout_constraintEnd_toStartOf="@id/button_recentPraiseTo_03"
        app:layout_constraintStart_toEndOf="@+id/button_recentPraiseTo_01"
        app:layout_constraintTop_toTopOf="@+id/button_recentPraiseTo_01" />

    <Button
        android:id="@+id/button_recentPraiseTo_03"
        style="@style/noto_sans_regular_13dp_brown"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/background_rectangle_radius_30"
        android:backgroundTint="@color/pale"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingHorizontal="8dp"
        android:text="임정은"
        app:layout_constraintEnd_toEndOf="@+id/editText_praiseTo"
        app:layout_constraintStart_toEndOf="@+id/button_recentPraiseTo_02"
        app:layout_constraintTop_toTopOf="@+id/button_recentPraiseTo_02" />

    <Button
        android:id="@+id/button_confirm"
        style="@style/noto_sans_regular_15dp_black"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="108dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/background_rectangle_radius_30"
        android:backgroundTint="@color/sand_yellow"
        android:text="확인"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_recentPraiseTo_03"
        app:layout_constraintStart_toStartOf="@+id/button_recentPraiseTo_01"
        app:layout_constraintTop_toBottomOf="@+id/editText_praiseTo" />

</androidx.constraintlayout.widget.ConstraintLayout>