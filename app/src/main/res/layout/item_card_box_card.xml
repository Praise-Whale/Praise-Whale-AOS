<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/imageView_cardShadow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shadow_rectangle_radius_15_card"
        android:backgroundTint="@color/praise_ranking_card_shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_background"
        android:layout_width="276dp"
        android:layout_height="0dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_card_box_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView_cardShadow"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_card_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="27dp"
        android:fontFamily="@font/noto_sans_medium"
        android:includeFontPadding="false"
        android:text="To."
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:letterSpacing="-0.05"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView_background" />

    <TextView
        android:id="@+id/tv_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:fontFamily="@font/noto_sans_bold"
        android:includeFontPadding="false"
        android:text="남궁웅앵"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:letterSpacing="-0.05"
        android:ellipsize="end"
        android:singleLine="true"
        app:layout_constraintTop_toTopOf="@id/tv_card_to"
        app:layout_constraintStart_toEndOf="@id/tv_card_to"/>

    <View
        android:id="@+id/v_card_div"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_card_div"
        app:layout_constraintTop_toBottomOf="@id/tv_card_to"
        app:layout_constraintStart_toStartOf="@id/tv_card_to"
        app:layout_constraintEnd_toEndOf="@id/tv_card_name"/>

    <TextView
        android:id="@+id/tv_card_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/bg_card_box_date"
        android:fontFamily="@font/noto_sans_regular"
        android:text="12월 22일"
        android:textSize="13sp"
        android:textColor="@color/brown"
        android:letterSpacing="-0.05"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="@+id/imageView_background"
        app:layout_constraintEnd_toEndOf="@+id/imageView_background" />

    <TextView
        android:id="@+id/tv_card_praise"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/card_img_card"
        android:fontFamily="@font/gmarket_sans_medium"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:paddingHorizontal="35dp"
        android:paddingTop="32dp"
        android:paddingBottom="33dp"
        android:text="네가 내 친구라서 참 좋아"
        android:textColor="@color/brown"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_background"
        app:layout_constraintEnd_toEndOf="@+id/imageView_background"
        app:layout_constraintStart_toStartOf="@+id/imageView_background"
        app:layout_constraintTop_toBottomOf="@id/v_card_div" />

</androidx.constraintlayout.widget.ConstraintLayout>